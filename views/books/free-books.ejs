<%- include('../layouts/header') %> 
<div class="p-4">
    <h2 class="text-center book-header">Free Books</h2><hr class="hr-underline">
</div>

<div class="add mt-4">       
    <div class="row">
    <% book.forEach(book => { %>
        <div class="col-md-3 col-6 mt-3">
          <div class="book">
            <center>
              <img class="img-fluid" src="<%= book.coverImagePath %>">
            </center>
          </div>
          <div class="mt-2">
            <p class="h3 book-title"><%= book.name %></p>
            <p class="h3 book-title"><%= book.title %></p>
            <p class="small text-muted"><%= book.createdAt.toLocaleDateString() %></p>
            <p><span class="book-head">Genre: </span><%= book.genre %></p>
            <form action="/books/issue/<%= book.id %>" method="POST">
                <button type="submit" class="btn btn-success m-2">Issue Book</button>
            </form>
          </div>
        </div>
        <% }) %> 
    </div>
</div>


<%- include('../layouts/footer') %>